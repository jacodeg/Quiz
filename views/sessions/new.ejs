<h2>Login</h2>

<% if (session.autoLogout==true && session.startTime!="undefined") { %>
   <br/><label class="autologout">Usuario inactivo</label>
   <br/><label class="autologout">Periodo de inactividad superior a dos minutos. Vuelva a autenticarse</label>
   <% session.autoLogout = false %>
<% } %>

<form method='POST' action='/login'>

  <div class="field">
    <label for="login">Login:</label><br />
    <input type="text" id="login" name="login" size="30" />
  </div>

  <div class="field">
    <label for="password">Password:</label><br />
    <input type="password" id="password" name="password" size="30" />
  </div>

  <div class="actions">
    <input name="commit" type="submit" value="Login" />
  </div>

</form>
